<Page x:Class="sessia3.Pages.DataOutput"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:sessia3.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DataOutput">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,10,0,10">
                <TextBlock Text="Фильтрация по типу"/>
                <ComboBox x:Name="ComboFilter" Height="20" Width="200" Margin="10,0,0,0" SelectionChanged="ComboFilter_SelectionChanged">
                    <ComboBoxItem Content="Все типы"/>
                </ComboBox>
            </StackPanel>
        </StackPanel>
        
        <ListView x:Name="listProducts" Grid.Row="1">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <WrapPanel>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="250"/>
                                <ColumnDefinition Width="250"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="{Binding title}" FontWeight="Bold" Grid.Row="0"/>
                            <TextBlock Text="{Binding image}" Grid.Row="1"/>
                            <StackPanel Grid.Column="1">
                                <TextBlock>
                                    <Run Text="Тип: "/>
                                    <Run Text="{Binding prod_types.prod_type}"/>
                                </TextBlock>
                                <TextBlock>
                                    <Run Text="Артикул: "/>
                                    <Run Text="{Binding article}"/>
                                </TextBlock>
                                <TextBlock>
                                    <Run Text="Описание: "/>
                                    <Run Text="{Binding description}"/>
                                </TextBlock>
                                <TextBlock>
                                    <Run Text="Количество человек на производстве: "/>
                                    <Run Text="{Binding production_person_count}"/>
                                </TextBlock>
                                <TextBlock>
                                    <Run Text="Номер производственного цеха: "/>
                                    <Run Text="{Binding production_workshop_number}"/>
                                </TextBlock>
                            </StackPanel>
                            <StackPanel Grid.Column="2">
                                <TextBlock>
                                <Run Text="Минимальная соимость для агента: "/>
                                <Run Text="{Binding min_cost_for_agent}"/>
                                </TextBlock>
                            </StackPanel>
                        </Grid>
                    </WrapPanel>
                </DataTemplate>
            </ListView.ItemTemplate>    
        </ListView>

        <Border Grid.Row="2" Padding="10">
            <StackPanel>
                <Button Content="Удалить продукт" Click="DeleteButton_Click" HorizontalAlignment="Right" Width="180" Height="30"/>
            </StackPanel>
        </Border>
        
    </Grid>
</Page>
